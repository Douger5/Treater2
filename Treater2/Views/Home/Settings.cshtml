@model Treater2.ViewModels.HomeIndex

@{
    ViewBag.Title = "Settings";
}

<img src="/Content/Images/FRLogo.jpg" />
<h2>Settings</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-inline">
        <h1>Select a treater:</h1>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.DropDownList("TreatingLineID", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TreatingLineID, "", new { @class = "text-danger" })
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
}